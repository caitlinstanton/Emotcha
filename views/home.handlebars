<div class="outer-container">
	<div class="row">
		<div class="parallax-container">
				<div class="parallax"><img src="Parallax/mosaic2.png"></div>
		</div>
		<div class="section white">
			<div class="row container">
				<h1 class="header">The Emotional Captcha: </h1>
				<h4 class="header sub-header"><small> What's More <big>Human</big> than Emotion </small></h4>
			</div>
		</div>
		<div class="parallax-container">
			<div class="parallax"><img src="Parallax/mosaic.png"></div>
		</div>

		<a class="btn-floating btn-large waves-effect waves-light down-btn red"><i class="mdi-hardware-keyboard-arrow-down"></i></a>

	<div class="emotcha-container", id="target">
		<div class="row">
			<div class="col s12 m4 example-col">
				<div class="card picture-card example-card">
					<div class="card-image">
						<img id="example-img", src="images/surprise.jpg">
					</div>
					<div class="card-content">
						<div class="emotions">
							<div class="progress">
								<div id='ex-angry', class="determinate" style="width: 1%"> Angry </div>
							</div>
							<div class="progress">
								<div id="ex-sad", class="determinate" style="width: 1%"> Sad </div>
							</div>
							<div class="progress">
								<div id="ex-neutral", class="determinate" style="width: 1%"> Neutral </div>
							</div>
							<div class="progress">
								<div id="ex-surprise", class="determinate" style="width: 1%"> Surprise </div>
							</div>
							<div class="progress">
								<div id="ex-fear", class="determinate" style="width: 1%"> Fear </div>
							</div>
							<div class="progress">
								<div id="ex-happy", class="determinate" style="width: 1%"> Happy </div>
							</div>
						</div>
						<a class="btn-floating btn-large waves-effect waves-light next-btn red"><i class="mdi-content-forward"></i></a>
					</div>
				</div>
			</div>

			<div class="col s12 m4 live-col">
				<div class="card picture-card live-card">
					<div class="card-image">
						<video width="600", height="450", autoplay></video>
					</div>
					<div class="card-content">
						<div class="emotions">
							<div class="progress">
								<div id='lv-angry', class="determinate" style="width: 1%"> Angry </div>
							</div>
							<div class="progress">
								<div id="lv-sad", class="determinate" style="width: 1%"> Sad </div>
							</div>
							<div class="progress">
								<div id="lv-neutral", class="determinate" style="width: 1%"> Neutral </div>
							</div>
							<div class="progress">
								<div id="lv-surprise", class="determinate" style="width: 1%"> Surprise </div>
							</div>
							<div class="progress">
								<div id="lv-fear", class="determinate" style="width: 1%"> Fear </div>
							</div>
							<div class="progress">
								<div id="lv-happy", class="determinate" style="width: 1%"> Happy </div>
							</div>
						</div>
						<a class="btn-floating btn-large waves-effect waves-light submit-btn red"><i class="mdi-av-play-arrow"></i></a>
					</div>
				</div>
			</div>

			<div class="col s12 m4 login-col">
				<div class="card login-card">
					<div class="card-content">
						<div class="row">
							<div class="input-field col s12">
								<input id="email" type="email" class="validate">
								<label for="email">Email</label>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<input id="password" type="password" class="validate">
								<label for="password">Password</label>
							</div>
						</div>
						<div class="row">
							<div class="col s12">
								<a class="waves-effect waves-light btn login-btn disabled">Log In</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- Modal Structure -->
<div id="login-modal" class="modal">
	<div class="modal-content">
		<h4>Login Sucessful</h4>
		<p>You have sucessfully used emotcha and could now login!!! Good job not being a robot</p>
	</div>
	<div class="modal-footer">
		<a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
	</div>
</div>
